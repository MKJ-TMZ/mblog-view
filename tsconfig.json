{
  "compilerOptions" : {
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "assets/*": ["src/assets/*"]
    },
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
